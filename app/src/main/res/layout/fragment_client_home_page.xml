<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p"
    android:orientation="vertical"
    tools:context=".Fragments.ClientHomePage">

    <!-- Tab Layout with a Button Aligned to the Right -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/actionButton">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BARBER LIST" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR APPOINTMENT" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Button Aligned to the Right of Tabs -->
        <ImageButton
            android:id="@+id/actionButton"
            android:layout_width="81dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/img_5"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="7dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <!-- Fragment Container for Navigation -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/clientnavgraph" />
</LinearLayout>
